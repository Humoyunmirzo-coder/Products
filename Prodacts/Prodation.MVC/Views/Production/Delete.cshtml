@model Prodation.MVC.Models.Products
@{
	ViewData["Title"] = "Delete Employee";
	var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3> @ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
	<div class="alert alert-success">
		<strong>Error!</strong>@errorMessage
		<button type="button" class="btn-close float-end " data-bs-dismiss="alter" aria-label="Close"></button>
	</div>
}
<form action="Delete" method="post" autocomplete="off">
	<div class="mb-3">
		<label class="form-lebel"> Id</label>
		<input type="text" class="form-control" asp-for="Id" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">Prise</label>
		<input type="text" class="form-control" asp-for="Name" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">Country</label>
		<input type="text" class="form-control" asp-for="Country" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">Date Of Issue  </label>
		<input type="date" class="form-control" asp-for="DateTime" readonly />
	</div>
	<div class="mb-3">
		<label class="form-label">Description</label>
		<input type="email" class="form-control" asp-for="Description" readonly />
	</div>

	</div>
	<div class="d-grid">
		<button type="submit" class=" btn btn-danger" onclick="return function('Are you sure to delete Product : @Model.Name')">Delete</button>

	</div>
</form>
